import random



class deck:
	# Function that sets deck variables based on the type of card needed
	def set_deck(nr_lands, nr_good_lands, nr_cards):
		nr_lands = 24
		nr_good_lands = 14
		nr_cards = 60
	# Function to draw and evaluate cards drawn
	def draw_card()
		for card in range(set_deck([2]):
			card = random.randint(1,nr_cards)
			if card > nr_good_lands and nr_lands:
				nr_cards -= 1
			if card > nr_good_lands and card < nr_lands:
				nr_lands -= 1
			elif card <= nr_good_lands:
				nr_good_lands -= 1
		print(nr_good_lands, nr_lands, nr_cards)
				
				
	
	